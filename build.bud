#!/usr/bin/env bud
import (
	_ "github.com/tbud/bud/tasks/asset"
)

# config asset plugin
TaskConfig("bud.asset", Config{
		"includes": []string{"bud.conf"},
		"output":   "context/assets.go",
		"package": "context",
})

UseTasks("bud")


Task("clean", func() error {
	return FindFiles(".budtmp.*").Each(RemoveAll)
})

Task("build", Depend("asset"), func() error {
	return Exec("go", "get", "github.com/tbud/bud")
})

Task("default", Depend("clean", "build"))

